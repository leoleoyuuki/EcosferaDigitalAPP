<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sensor.SensorEditFragment">

    <!-- Título de Edição -->
    <TextView
        android:id="@+id/tvEditSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Sensor"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Campo para Nome do Sensor -->
    <EditText
        android:id="@+id/etSensorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nome do Sensor"
        android:inputType="text"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEditSensor"
        android:padding="12dp" />

    <!-- Campo para Descrição do Sensor -->
    <EditText
        android:id="@+id/etSensorDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Descrição do Sensor"
        android:inputType="text"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etSensorName"
        android:padding="12dp" />

    <!-- Botão de Salvar -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_marginTop="32dp"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etSensorDescription"
        android:padding="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
