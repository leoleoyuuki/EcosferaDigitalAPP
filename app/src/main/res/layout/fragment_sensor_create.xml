<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etSensorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Sensor Name"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <EditText
        android:id="@+id/etSensorType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Sensor Type"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/etSensorName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etSensorDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Sensor Description"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/etSensorType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnSaveSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Sensor"
        app:layout_constraintTop_toBottomOf="@id/etSensorDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
